#include <iostream>

int main() {
    double num1, num2;

    // Get user input
    std::cout << "Enter the first number: ";
    std::cin >> num1;

    std::cout << "Enter the second number: ";
    std::cin >> num2;

    // Output results
    std::cout << "\nResults:\n";
    std::cout << "Sum: " << num1 << " + " << num2 << " = " << (num1 + num2) << std::endl;
    std::cout << "Difference: " << num1 << " - " << num2 << " = " << (num1 - num2) << std::endl;
    std::cout << "Product: " << num1 << " * " << num2 << " = " << (num1 * num2) << std::endl;

    // Handle division
    if (num2 != 0) {
        std::cout << "Quotient: " << num1 << " / " << num2 << " = " << (num1 / num2) << std::endl;
    } else {
        std::cout << "Quotient: Division by zero is not allowed!" << std::endl;
    }

    return 0;
}
